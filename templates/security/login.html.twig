{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	{% include 'navbar.html.twig' %}

	<div class="container">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}
			<h1 class="h3 m-3 font-weight-normal text-center">Connexion</h1>
			<label for="inputEmail" class="form-label m-3">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control m-3" autocomplete="email" required autofocus>
			<label for="inputPassword" class="form-label m-3">Mot de passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control m-3" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn-lg btn-primary m-3" type="submit">
				Se connecter
			</button>
		</form>
	</div>
{% endblock %}
